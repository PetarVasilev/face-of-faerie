<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/infoscreenbackground"
    android:id="@+id/rootRelativeLayout"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/creditsImageView"
        android:layout_marginTop="30dp"
        android:src="@drawable/creditslabel"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <ImageView
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:id="@+id/seperateImageView"
        android:layout_below="@+id/creditsImageView"
        android:layout_marginRight="60dp"
        android:background="@drawable/seperator_line"
        android:layout_height="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/seperateImageView"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/worldOfImageView"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/worldoffroud"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/bbpCreationsImageView"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:src="@drawable/bbpcreationsbtn"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/lillToddImageView"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:src="@drawable/lil_gordanbtn"
            android:layout_height="30dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/heartimage"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/closeButton"
        android:layout_height="120dp" />
    <Button
        android:layout_width="40dp"
        android:background="@drawable/close"
        android:layout_marginBottom="20dp"
        android:id="@+id/closeButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp" />
</RelativeLayout>
